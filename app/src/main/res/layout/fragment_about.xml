<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/city_icon_width"
                    android:layout_height="@dimen/city_icon_height"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/auckland" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/CityFactHeader"
                    android:text="@string/label_country" />

                <TextView
                    style="@style/CityFactPanel"
                    android:text="@string/auckland" />

                <TextView
                    style="@style/CityFactHeader"
                    android:text="@string/label_language" />

                <TextView
                    style="@style/CityFactPanel"
                    android:text="@string/country_language" />

                <TextView
                    style="@style/CityFactHeader"
                    android:text="@string/label_airports" />

                <TextView
                    style="@style/CityFactPanel"
                    android:text="@string/airport_name" />

                <TextView
                    style="@style/CityFactHeader"
                    android:text="@string/label_transport" />

                <TextView
                    style="@style/CityFactPanel"
                    android:text="@string/transports" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/CityDescriptionHeader"
            android:background="@color/colorPink"
            android:text="@string/label_about_city" />

        <TextView
            style="@style/CityPanelDescription"
            android:background="@color/colorLightGrey"
            android:text="@string/city_description"
            android:textColor="@color/colorText" />

    </LinearLayout>
</ScrollView>